<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Task</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary" aria-label="Help">?</button>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Add Task</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b></b>
        </div>
    </div>
</div>

<form action="/add" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="name">Task</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter Task Name" required>
        </div>

        <div class="col">
            <label for="importance">Priority</label>
            <div>
                <input type="radio" id="low-priority" name="importance" value="low" required>
                <label for="low-priority">Low</label>
                <input type="radio" id="medium-priority" name="importance" value="medium" required>
                <label for="medium-priority">Medium</label>
                <input type="radio" id="high-priority" name="importance" value="high" required>
                <label for="high-priority">High</label>
            </div>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" required>
        </div>
    </div>

    <div class="form-group mb-4 text-end">
        <button type="submit" class="btn btn-primary">Add Task</button>
    </div>
</form>
